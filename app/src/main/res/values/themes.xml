<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/purple_200</item>
    <item name="colorPrimaryVariant">@color/purple_200</item>
    <item name="colorOnPrimary">@color/purple_500</item>
    <item name="textAllCaps">false</item>
    <item name="android:textColor">#000</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <item name="fontFamily">@font/gilroy_regular</item>
    <!-- Customize your theme here. -->

</style>
<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

<style name="my_button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/fab_margin</item>
    <item name="background">@drawable/button_background</item>
    <item name="android:textColor">@color/white</item>
</style>

<style name="matchwrap">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
</style>


<style name="textview" parent="matchwrap">
    <item name="android:drawablePadding">@dimen/fab_margin</item>
    <item name="android:layout_marginBottom">@dimen/small</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
</style>

<style name="account_option_radio_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">16dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
</style>
<style name="AppTheme.NoActionBar" parent="AppTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>
</resources>